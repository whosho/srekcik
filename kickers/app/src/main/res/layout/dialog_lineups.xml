<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_header"
        style="@style/dialog_header_text"
        android:layout_alignParentTop="true"
        tools:text="LINEUPS"
        android:padding="10dp"
        android:gravity="center" />

    <Button
        android:id="@+id/dialog_btn_ok"
        style="@style/button_normal_style"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/ok" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_header"
        android:layout_above="@id/dialog_btn_ok"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Team ONE" />

        <com.performgroup.innovation.kickers.ui.customview.LineupsItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/team_one_attack" />

        <com.performgroup.innovation.kickers.ui.customview.LineupsItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/team_one_defense" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Team TWO" />

        <com.performgroup.innovation.kickers.ui.customview.LineupsItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/team_two_attack" />

        <com.performgroup.innovation.kickers.ui.customview.LineupsItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/team_two_defense" />

    </LinearLayout>

</RelativeLayout>