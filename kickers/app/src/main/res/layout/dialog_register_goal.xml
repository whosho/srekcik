<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/football_field_background"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/tv_match_finished_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        tools:text="Register goal for Player 1" />

    <RadioGroup
        android:id="@+id/rg_goal_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rb_goal"
            style="@style/goal_dialog_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/goal" />

        <RadioButton
            android:id="@+id/rb_own_goal"
            style="@style/goal_dialog_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/own_goal" />

        <RadioButton
            android:id="@+id/rb_delete_goal"
            style="@style/goal_dialog_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete_goal" />

    </RadioGroup>

    <Button
        android:id="@+id/b_register_goal"
        style="@style/button_normal_style"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/register_goal" />

</LinearLayout>