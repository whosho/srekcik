<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
    </style>

    <style name="button_play_style">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_play_selector</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="button_normal_style">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_normal_selector</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="score_info">
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="match_score">
        <item name="android:textSize">50sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="match_field_player_name">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="match_field_player_red_name" parent="match_field_player_name">
        <item name="android:background">@drawable/button_player_red_selector</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="match_field_player_blue_name" parent="match_field_player_name">
        <item name="android:background">@drawable/button_player_blue_selector</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="game_rules_item">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="list_header_small">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="goal_dialog_item">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

</resources>
